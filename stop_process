# Находим PID процессов, связанных с Python скриптом
PIDS=$(pgrep -f "tg_bot.py")

# Убиваем найденные процессы
if [ -n "$PIDS" ]; then
    echo "Удаление процессов tg_bot.py..."
    kill $PIDS
else
    echo "tg_bot.py Процессы не найдены."
fi

PIDS=$(pgrep -f "app_server.py")

# Убиваем найденные процессы
if [ -n "$PIDS" ]; then
    echo "Удаление процессов app_server.py..."
    kill $PIDS
else
    echo "app_server.py Процессы не найдены."
fi


PIDS=$(pgrep -f "wiring.py")

